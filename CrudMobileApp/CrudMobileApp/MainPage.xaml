<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudMobileApp.MainPage">

    <StackLayout Padding="10" Spacing="10">
        <Label Text="Product Id"></Label>
        <Entry Text="{Binding Id, Mode=TwoWay}" Placeholder="Enter Product ID here..."></Entry>
        <Label Text="Product Name"></Label>
        <Entry Text="{Binding ProductName, Mode=TwoWay}" Placeholder="Enter Product Name here..."></Entry>

        <StackLayout Orientation="Horizontal">
            <Label Text="Two Way Binding"></Label>
            <Label Text="{Binding DisplayMessage}"></Label>
        </StackLayout>

        <Button Text="Add Product" Command="{Binding SaveProductCommand}"></Button>
        <Button Text="View All Products" Command="{Binding OpenProductBrowserCommand}"></Button>
    </StackLayout>

</ContentPage>
